{
    "ASSET_EXTS": {
        "tmpl"    : {
            "mime": "text/generictemplate"
            },
        "template": {
            "mime": "text/generictemplate"
            },
        "jinja"   : {
            "mime": "text/jinja2"
            },
        "pipetest": {
            "mime": "ridiculous/pipetest"
            },
        "js"      : {
            "mime": "text/javascript"
            },
        "renamejs": {
            "mime": "text/javascript",
            "ext" : "js"
            }
    },

    "ASSET_FILTERS": {
        "text/generictemplate": {
            "type": "python",
            "func": "jinja2_filter"
        },
        "text/jinja2": {
            "type": "python",
            "func": "jinja2_filter"
        },
        "ridiculous/pipetest": {
            "type": "pipe",
            "args": ["gawk", "-F:", "{ print $1 }"]
        }
    },

    "ASSET_SOURCES": [
        {
            "in": "samples",
            "out": "samples/out"
        }
    ],

    "ASSET_CONTEXT": {
        "name": "John Doe",
        "chain_name": "{{ name }}"
    }
}

{
    "ASSET_EXTS": {
        "tmpl"    : "text/generictemplate",
        "template": "text/generictemplate",
        "jinja"   : "text/jinja2",
        "pipetest": "ridiculous/pipetest"
    },

    "ASSET_FILTERS": {
        "text/generictemplate": {
            "type": "python",
            "func": "jinja2_filter"
        },
        "text/jinja2": {
            "type": "python",
            "func": "jinja2_filter"
        },
        "ridiculous/pipetest": {
            "type": "pipe",
            "args": ["gawk", "-F:", "{ print $1 }"]
        }
    },

    "ASSET_SOURCES": [
        {
            "in": "samples",
            "out": "samples/out"
        }
    ],

    "ASSET_CONTEXT": {
        "name": "John Doe",
        "chain_name": "{{ name }}"
    }
}
